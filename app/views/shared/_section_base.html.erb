<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <% section_name  = locals[:section].name %>
      <% sub_sections  = locals[:sub_sections]  %>
      <%= render 'shared/' + section_name + '_nav', locals: { sub_sections: sub_sections } %>
    </div>
    <div class="col-md-10">
      <div class="container-fluid">
        <div class="row">
          <%= locals[:section].description.html_safe %>
        </div>
      </div>
    </div>
  </div>
</div>
