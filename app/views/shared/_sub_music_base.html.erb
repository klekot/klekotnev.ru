<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <% section_name = locals[:section].name %>
      <% sub_sections = locals[:sub_sections]  %>
      <% albums       = locals[:albums]  %>
      <%= render 'shared/' + section_name + '_nav', locals: { sub_sections: sub_sections } %>
    </div>
    <div class="col-md-8">
      <div class="container-fluid">
        <div class="row">
          <%= locals[:description].html_safe %>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <div class="container-fluid">
        <div class="row">
          <%= render 'shared/_albuls_list.html.erb', locals { albums: albums } %>
        </div>
      </div>
    </div>
  </div>
</div>
